# ==============================================
# SendIt Backend Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ==============================================

# -----------------
# Server Configuration
# -----------------
PORT=5000
# Options: development, staging, production
NODE_ENV=development

# -----------------
# Database (PostgreSQL)
# -----------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://username:password@localhost:5432/sendit_db?schema=public"

# -----------------
# JWT Configuration
# -----------------
# IMPORTANT: Generate strong random secrets for production
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# -----------------
# OTP Configuration
# -----------------
# OTP expiry time in minutes
OTP_EXPIRY_MINUTES=5
# NOTE: In development (NODE_ENV=development), static OTP "111111" is accepted

# -----------------
# SMS Gateway
# -----------------
# Provider: MSG91, Twilio, or similar
# Leave empty to skip SMS in development (use static OTP: 111111)
SMS_API_KEY=
SMS_SENDER_ID=SENDIT

# -----------------
# Google Maps API
# -----------------
# Required for geocoding, distance calculation
# Get from: https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=

# -----------------
# Payment Gateway (Razorpay)
# -----------------
# Get from: https://dashboard.razorpay.com
# Test keys start with rzp_test_
# Live keys start with rzp_live_
RAZORPAY_KEY_ID=rzp_test_placeholder
RAZORPAY_KEY_SECRET=placeholder_secret

# -----------------
# File Upload (Cloudinary)
# -----------------
# Get from: https://cloudinary.com/console
# Optional: Falls back to local storage in development
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# -----------------
# Firebase Cloud Messaging (Push Notifications)
# -----------------
# Get from: Firebase Console > Project Settings > Service Accounts
# Download service account JSON and extract values
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=
# Alternative: Set entire service account JSON (base64 encoded)
# FIREBASE_SERVICE_ACCOUNT=

# -----------------
# App URLs
# -----------------
# Backend API URL
APP_URL=http://localhost:5000
# Frontend/Admin panel URL (for CORS)
CLIENT_URL=http://localhost:3000

# -----------------
# Rate Limiting
# -----------------
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX=100
